generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

// --- NEXT AUTH (Standard) ---
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    role          Role      @default(CASHIER)
    accounts      Account[]
    sessions      Session[]
    posts         Post[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

// --- APP CONTENT ---

model Post {
    id          Int      @id @default(autoincrement())
    name        String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    createdById String
    createdBy   User     @relation(fields: [createdById], references: [id])

    @@index([name])
}

model Category {
    id    String     @id @default(cuid())
    name  String
    slug  String     @unique // e.g. "food", "drinks"
    items MenuItem[]
}

model MenuItem {
    id          String      @id @default(cuid())
    name        String
    price       Float
    categoryId  String
    category    Category    @relation(fields: [categoryId], references: [id])
    isAvailable Boolean     @default(true)
    
    orderItems  OrderItem[] // Link to order history
}

// --- MISSING MODELS ADDED BELOW ---

model Order {
  // SQLite Fix: make the ID an Integer so it can Auto-Increment
  id            Int         @id @default(autoincrement()) 
  
  createdAt     DateTime    @default(now())
  status        OrderStatus @default(PENDING)
  
  total         Float
  paymentMethod String?     // "CASH", "CARD", "TRANSFER"
  cashierName   String?     
  
  items         OrderItem[]
}

model OrderItem {
  id         String   @id @default(cuid())
  
  // Update relation to match the new Integer ID of Order
  orderId    Int
  order      Order    @relation(fields: [orderId], references: [id])
  
  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  
  quantity   Int
  price      Float    
}

// --- ENUMS ---

enum Role {
    ADMIN
    CASHIER
    KITCHEN
    BARISTA
}

enum OrderStatus {
    PENDING   // Just ordered
    COOKING   // Kitchen is working
    READY     // Ready to serve
    COMPLETED // Paid & Done
    CANCELLED
}

// Unused but kept for legacy reference (optional)
model Employee {
    id        String   @id @default(cuid())
    name      String
    pin       String
    role      Role
    createdAt DateTime @default(now())
}